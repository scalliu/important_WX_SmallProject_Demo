/* 本页面公用css */
image {
  width: 100%;
  height: 100%;
}

.themeRed {
  color: #fa2802;
}

.marginL10 {
  margin-left: 20rpx;
}

.marginR10 {
  margin-right: 20rpx;
}

.floatRight {
  float: right;
}

.borderRed {
  border: 1px solid #fa2802;
}

.themeEEE {
  color: gray;
}

.bgWhite {
  background: white;
}

/*     /共用部分 */

#productDetail {
  background: #efeff4;
  height: 100vh;
}

.tabButtonWrap {
  font-size: 34rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.tabButton {
  width: 100%;
  display: flex;
  text-align: center;
}

.tabButton view {
  flex: 1 1 auto;
}

.tabButton view .active {
  border-bottom: 2px solid #fa2802;
  color: #fa2802;
  display: inline;
}

/*内容主体 */
.imageWrap {
  width: 100%;
  height: 320rpx;
}

.productInformation {
  padding: 24rpx;
}

.product-title {
  font-size: 32rpx;
}

.product-property {
  font-size: 28rpx;
}

.nowPrice {
  font-size: 38rpx;
  font-weight: bold;
}

.delect {
  margin-left: 10rpx;
  font-size: 32rpx;
  text-decoration: line-through;
}

.moreWrap {
  padding: 24rpx;
  font-size: 24rpx;
  border-top: 1px solid #cccc;
}

.moreIcon {
  font-weight: 1200;
  color: #5bb8ff;
}

/* 评价 */
.evaluateWrap {
  margin-top: 40rpx;
  font-size: 28rpx;
}

.evaluate {
  height: 80rpx;
  padding: 0 24rpx;
  line-height: 80rpx;
}

.common {
  border-top: 1px solid #cccc;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 24rpx;
  text-align: center;
}




/* 星星 */
.comment1-description {
  margin-top: 35rpx;
  display: flex;
  flex-direction: row;
}

.comment1-description1 {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  margin-left: 30rpx;
}

.star-pos {
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 0px;
  margin-right: 40rpx;
}

/* 灰色  */
.comment1-description .star-pos .hideStar {
  z-index: 2;
  background-image: url("https://www.zhangxinxu.com/study/201308/star.png");
  width: 48rpx;
  height: 40rpx;
  background-position: 0 0;
  background-size: 100%;
  background-repeat: no-repeat;
}

/*点亮  */
.lightStar {
  z-index: 1;
  background-image: url("https://www.zhangxinxu.com/study/201308/star.png");
  width: 48rpx;
  height: 40rpx;
  background-size: 100%;
  background-position: 0 -40rpx;
  background-repeat: no-repeat;
}