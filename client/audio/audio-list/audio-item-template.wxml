
 <!-- 用户音频列表 --> 

<template name="msgItem">
 <!-- <view class="post-detail" wx:for='{{postList}}'> --> 
        <view class="post-author-date">
            <image src="{{item.avatar}}" bindtap="av" class="post-headImg"   />
            <text class="post-author-text">{{item.date}}</text>
        </view>

        <text class="post-author-title">{{item.title}}</text>
        <image src='{{item.imgSrc}}'   style="width :100%;"/>
        
        
        <text class="post-content">{{item.content}}</text>
        <block>
            <view class="post-content-container"> 
                <view class="post-like">
                    <image class="post-like-image" src="../../images/icon/chat.png"></image>
                    <text class="post-like-font">{{item.collection}}</text>
                    <image class="post-like-image" src="../../images/icon/view.png"></image>
                    <text class="post-like-font">{{item.reading}}</text>
                </view>
            </view>
        </block>
    <!-- </view> -->
</template>    